set(LIBSRTP_VERSION 2.6.0)
set(LIBSRTP_ARCHIVE_URL "https://github.com/cisco/libsrtp/archive/refs/tags/v${LIBSRTP_VERSION}.tar.gz")
set(LIBSRTP_ARCHIVE_HASH "SHA256=bf641aa654861be10570bfc137d1441283822418e9757dc71ebb69a6cf84ea6b")

orcaslicer_add_cmake_project(libsrtp
    URL "${LIBSRTP_ARCHIVE_URL}"
    URL_HASH ${LIBSRTP_ARCHIVE_HASH}
    DEPENDS ${OPENSSL_PKG}
    CMAKE_ARGS
        -DLIBSRTP_TEST_APPS=OFF
        -DENABLE_OPENSSL=ON
        -DENABLE_WARNINGS=OFF
        -DENABLE_WARNINGS_AS_ERRORS=OFF
        -DENABLE_SANITIZE_ADDR=OFF
        -DENABLE_SANITIZE_UNDEF=OFF
        -DENABLE_SANITIZE_LEAK=OFF
        -DENABLE_SANITIZE_THREAD=OFF
)
